{
    "compilerOptions": {
      "target": "esnext",
      "lib": ["dom", "esnext"],
      "strict": true,
      "module": "es2022",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "include": ["src/**/*.ts", "src/**/*.js"],
    "exclude": ["node_modules"]
  }